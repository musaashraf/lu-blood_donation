<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:background="@drawable/shape_search"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Blood Group: "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/donor_bloodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:text="Show Blood Type"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Area/Village: "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/donor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_marginTop="1dp"
                android:text="Area/Village"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Upazilla/Versity: "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/donor_university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_marginLeft="140dp"
                android:text="Upazilla/University"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Last Donation: "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/donor_LastDonationdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:text="Last Donation Date"
                android:textStyle="bold" />

        </RelativeLayout>


        <!--<TextView
            android:id="@+id/donor_Userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donor_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textStyle="bold" />-->
    </LinearLayout>

</LinearLayout>